{% extends 'base.html.twig' %}

<form action="{{ form.action }}" method="{{ form.method }}" class="space-y-4">
    {% for field in form.fields %}
        <div class="flex flex-col">
            <label for="{{ field.name }}" class="text-sm font-semibold text-gray-700">{{ field.name }}</label>
            <input
                    type="{{ field.type }}"
                    name="{{ field.name }}"
                    id="{{ field.name }}"
                    placeholder="{{ field.attributes.placeholder }}"
                    class="mt-1 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
        </div>
    {% endfor %}

    <button type="submit" class="mt-4 px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
        Submit
    </button>
</form>

{% if message %}
    <div class="mt-4 p-4 text-white bg-green-500 rounded-md">
        <p>{{ message }}</p>
    </div>
{% endif %}
